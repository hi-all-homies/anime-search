<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>

<StackPane stylesheets="@../main.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.controllers.AnimeListController">
   <children>
      <BorderPane fx:id="single">
         <center>
            <ScrollPane fx:id="singleScroll" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <HBox alignment="CENTER" spacing="15.0">
               <children>
                  <Pane HBox.hgrow="SOMETIMES" />
                  <Label fx:id="title" styleClass="titles" />
                  <Pane HBox.hgrow="SOMETIMES" />
                  <Button fx:id="backBtn" mnemonicParsing="false" onAction="#submitBack">
                     <graphic>
                        <FontIcon iconColor="azure" iconLiteral="fas-fast-backward" iconSize="25" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
      <ScrollPane fx:id="listScroll" fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" styleClass="edge-to-edge">
         <content>
            <VBox fx:id="list" alignment="TOP_CENTER" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding></VBox>
         </content>
      </ScrollPane>
   </children>
</StackPane>
